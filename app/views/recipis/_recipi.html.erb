<div id="<%= dom_id recipi %>">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <% if recipi.image.present? %>
        <%= image_tag(recipi.image, class: "img-fluid")%>
      <% end %>
    </div>
  </div>
  <p>
    <strong>Title:</strong>
    <%= recipi.title %>
  </p>

  <p>
    <strong>Cook time:</strong>
    <%= recipi.cook_time %>
  </p>

  <p>
    <strong>Prep time:</strong>
    <%= recipi.prep_time %>
  </p>

  <p>
    <strong>Ratings:</strong>
    <%= recipi.ratings %>
  </p>

  <p>
    <strong>Cuisine:</strong>
    <%= recipi.cuisine %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= recipi.category %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= recipi.author %>
  </p>



  <p>
    <strong>Ingredients</strong> <%= recipi.ingredients.map(&:name).join(" ")%>
  </p>

</div>
